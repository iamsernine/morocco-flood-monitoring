# ============================================================================
# CONFIGURATION ENVIRONNEMENT - Morocco Flood Monitoring System
# ============================================================================
# Description: Variables d'environnement pour la configuration du backend.
# Usage: Copier ce fichier en .env et remplir les valeurs.
# ============================================================================

# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_BROKER_USERNAME=
MQTT_BROKER_PASSWORD=

# OpenWeather API
OPENWEATHER_API_KEY=your_openweather_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# SMTP Configuration (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SENDER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# System Configuration
AGGREGATION_INTERVAL=300
BUFFER_WINDOW_MINUTES=30
MODEL_VERSION=v1.0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
